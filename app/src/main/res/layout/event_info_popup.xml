<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="200dp"
    android:layout_height="600dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Event Info"
        android:id="@+id/event_info_title"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:textColor="@color/testBlue"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Course name:"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="event_info_popup_name_en"
        android:id="@+id/event_info_popup_name_en"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="event_info_popup_name_sv"
        android:id="@+id/event_info_popup_name_sv"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Time:"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Time"
        android:id="@+id/event_info_popup_time"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Room:"
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="No room"
        android:id="@+id/event_info_popup_room"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Teacher:"
        android:id="@+id/textView4"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="No teacher"
        android:id="@+id/event_info_popup_teacher"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Info:"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="No info"
        android:id="@+id/event_info_popup_info"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="16sp" />

</LinearLayout>
</ScrollView>