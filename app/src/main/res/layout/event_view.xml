<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/event_view" android:focusable="false" android:focusableInTouchMode="false"
    android:clickable="false">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_action_view_as_list"
        android:maxHeight="60dp"
        android:maxWidth="60dp"
        android:minHeight="20dp"
        android:minWidth="20dp"
        android:adjustViewBounds="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_marginLeft="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Teacher"
        android:id="@+id/event_teacher"
        android:layout_toRightOf="@+id/image_icon"
        android:layout_toEndOf="@+id/image_icon"
        android:textSize="16sp"
        android:layout_marginBottom="6dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="9dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Room"
        android:id="@+id/event_room"
        android:textSize="16sp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_toRightOf="@+id/image_icon"
        android:layout_toEndOf="@+id/image_icon"
        android:layout_marginTop="38dp"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Info"
        android:id="@+id/event_info"
        android:textSize="16sp"
        android:layout_alignBottom="@+id/event_teacher"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="08:00-10:00"
        android:id="@+id/event_time"
        android:textSize="16sp"
        android:layout_alignTop="@+id/event_room"
        android:layout_alignRight="@+id/event_info"
        android:layout_alignEnd="@+id/event_info"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="1DV008"
        android:id="@+id/event_course_code"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="10sp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="53dp"
        android:textStyle="bold"
        android:typeface="normal" />

</RelativeLayout>