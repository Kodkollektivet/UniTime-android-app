<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="70dp"
    android:id="@+id/event_view" android:focusable="false" android:focusableInTouchMode="false"
    android:background="@color/white"
    android:clickable="false">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_list_icon"
        android:maxHeight="60dp"
        android:maxWidth="60dp"
        android:minHeight="60dp"
        android:minWidth="60dp"
        android:adjustViewBounds="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_marginLeft="-10dp"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Teacher"
        android:id="@+id/event_teacher"
        android:textSize="14sp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_below="@+id/event_time"
        android:layout_alignLeft="@+id/event_course"
        android:layout_alignStart="@+id/event_course"
        android:layout_marginTop="1dp"
        android:layout_toStartOf="@+id/event_room"
        android:layout_toLeftOf="@+id/event_room"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:singleLine="true"
        android:ellipsize="end"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Course"
        android:id="@+id/event_course"
        android:layout_toRightOf="@+id/image_icon"
        android:layout_toEndOf="@+id/image_icon"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="6dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="-5dp"
        android:layout_marginStart="-5dp"
        android:layout_toLeftOf="@+id/event_time"
        android:layout_toStartOf="@+id/event_time"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:singleLine="true"
        android:ellipsize="end"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Room"
        android:id="@+id/event_room"
        android:textSize="14sp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_alignBottom="@+id/event_teacher"
        android:layout_alignRight="@+id/event_time"
        android:layout_alignEnd="@+id/event_time" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Info"
        android:id="@+id/event_info"
        android:textSize="14sp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_alignLeft="@+id/event_teacher"
        android:layout_alignStart="@+id/event_teacher"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:singleLine="true"
        android:ellipsize="end"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="08:00-10:00"
        android:id="@+id/event_time"
        android:textSize="16sp"
        android:layout_alignTop="@+id/event_course"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_marginRight="5dp"
        />

</RelativeLayout>