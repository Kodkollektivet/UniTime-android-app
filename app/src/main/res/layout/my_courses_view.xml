<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/course_view">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_icon"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/course_icon"
            android:maxHeight="100dp"
            android:maxWidth="100dp"
            android:minHeight="60dp"
            android:minWidth="60dp"
            android:adjustViewBounds="false"
            android:focusable="false"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Name"
                android:id="@+id/course_name"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/image_icon"
                android:layout_toEndOf="@+id/image_icon"
                android:layout_marginTop="6dp"
                android:textSize="16sp"
                android:focusable="false"
                android:ellipsize="end"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:singleLine="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="semester"
                android:id="@+id/course_semester"
                android:textSize="16sp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="6dp"
                android:layout_alignBottom="@+id/image_icon"
                android:layout_marginBottom="5dp"
                android:focusable="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentBottom="false"
                android:layout_alignParentStart="false"
                android:layout_toRightOf="@+id/image_icon"
                android:layout_toEndOf="@+id/image_icon"
                android:ellipsize="end"
                android:singleLine="true"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/below"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="course code"
                android:id="@+id/course_code"
                android:textSize="16sp"
                android:layout_alignParentTop="true"
                android:focusable="false"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="60dp"
                android:layout_marginEnd="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="location"
                android:id="@+id/course_location"
                android:layout_alignParentLeft="true"
                android:textSize="16sp"
                android:focusable="false"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/remove_icon"
                android:src="@drawable/remove_icon_state"
                android:background="@color/white"
                android:layout_alignParentRight="true"
                android:maxHeight="35dp"
                android:maxWidth="35dp"
                android:minHeight="35dp"
                android:minWidth="35dp"
                android:layout_gravity="end"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:adjustViewBounds="true"
                android:focusable="false"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>