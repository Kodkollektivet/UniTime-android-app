<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:textColorPrimary">@color/grey</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">

        <item name="android:background">@color/testBlue</item>
        <item name="background">@color/testBlue</item>
        <item name="logo">@mipmap/unitime_logotype</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="displayOptions">useLogo|showHome</item>
    </style>

    <style name="CaldroidDefaultCustom" parent="CaldroidDefault">
        <item name="styleCaldroidLeftArrow">@style/CaldroidDefaultCustomArrowButton</item>
    </style>

    <style name="CaldroidDefaultCustomArrowButton" parent="CaldroidDefaultArrowButton">
        <item name="android:background">@color/testBlue</item>
    </style>

    <style name="PopupAnimation" parent="android:Animation" mce_bogus="1">
        <item name="android:windowEnterAnimation">@anim/popup_anim_in</item>
        <item name="android:windowExitAnimation">@anim/popup_anim_out</item>
    </style>

</resources>
