<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:textColorPrimary">@color/lightgrey</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">

        <item name="android:background">@color/darkturcoise</item>
        <item name="background">@color/darkturcoise</item>
    </style>

    <style name="CaldroidDefaultCustom" parent="CaldroidDefault">
        <item name="styleCaldroidLeftArrow">@style/CaldroidDefaultCustomArrowButton</item>
    </style>

    <style name="CaldroidDefaultCustomArrowButton" parent="CaldroidDefaultArrowButton">
        <item name="android:background">@color/darkturcoise</item>
    </style>

</resources>
